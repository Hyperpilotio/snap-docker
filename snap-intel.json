{
  "version": 1,
  "schedule": {
    "type": "simple",
    "interval": "10s"
  },
  "workflow": {
    "collect": {
      "metrics": {
        "/intel/docker/*": {},
        "/intel/procfs/meminfo/*": {},
        "/intel/procfs/disk/*": {}
      },
      "config": {
        "/intel/procfs/disk": {
          "proc_path": "/proc_host"
        },
        "/intel/procfs/meminfo": {
          "proc_path": "/proc_host"
        },
        "/intel/docker": {
          "procfs": "/proc_host"
        }
      },
      "tags": {
        "/intel": {
          "nodename": "{NODE_NAME}"
        }
      },
      "publish": [
        {
          "plugin_name": "influxdb",
          "config": {
            "host": "influxsrv",
            "port": 8086,
            "database": "snap",
            "user": "root",
            "password": "hyperpilot",
            "https": false,
            "skip-verify": false
          }
        }
      ]
    }
  }
}
